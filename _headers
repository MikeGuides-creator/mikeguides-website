# -----------------------------
# Global security + HTML caching
# -----------------------------
/*
  # --- Security hardening (safe defaults) ---
  Strict-Transport-Security: max-age=31536000
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), camera=(), microphone=(), interest-cohort=()

  # --- Content Security Policy (enables Plausible + your current inline styles) ---
  Content-Security-Policy: default-src 'self'; script-src 'self' https://plausible.io 'unsafe-inline'; connect-src 'self' https://plausible.io https://plausible.events; img-src 'self' https: data: blob:; style-src 'self' 'unsafe-inline'; font-src 'self' https: data:; object-src 'none'; base-uri 'self'; frame-ancestors 'none'; form-action 'self'; upgrade-insecure-requests

  Cache-Control: max-age=0, must-revalidate

/images/*
  Cache-Control: public, max-age=31536000, immutable

/fonts/*
  Cache-Control: public, max-age=31536000, immutable

/*.html
  Cache-Control: max-age=0, must-revalidate

/assets/*favicon*.svg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/svg+xml

/assets/*favicon*-180.png
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/png

/assets/*favicon*-32.png
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/png

/assets/*favicon*-16.png
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/png

/assets/favicon.ico
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/x-icon

/assets/apple-touch-icon.png
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/png

