</html>Cost = tickets * (resolutionTime / 60) * agentCost;
            const automatedTickets = tickets * (automationRate / 100);
            const monthlySavings = automatedTickets * (resolutionTime / 60) * agentCost;
            const annualSavings = monthlySavings * 12;
            
            // Implementation costs
            const implementationCost = 15000 + (timeline * 2000); // Base cost + timeline factor
            const platformCost = 500 * 12; // Monthly platform fee
            const netAnnualSavings = annualSavings - platformCost;
            const roiPercentage = ((netAnnualSavings - implementationCost) / implementationCost) * 100;
            
            // Satisfaction impact
            let satisfactionImpact = "";
            switch(satisfactionTarget) {
                case 'maintain': satisfactionImpact = "Maintained customer satisfaction levels"; break;
                case 'improve': satisfactionImpact = "10-15% improvement in customer satisfaction"; break;
                case 'significant': satisfactionImpact = "20%+ improvement in customer satisfaction"; break;
            }
            
            businessData.calculations++;
            businessData.totalSavings += netAnnualSavings;
            businessData.roiScores.push(Math.max(roiPercentage, 0));
            
            let resultHTML = '<div class="result-box">';
            resultHTML += '<h4>ü§ñ Customer Service Automation Analysis</h4>';
            resultHTML += `<p><strong>Current Monthly Cost:</strong> ${currentMonthlyCost.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Tickets Automated:</strong> ${automatedTickets.toLocaleString()} per month (${automationRate}%)</p>`;
            resultHTML += `<p><strong>Monthly Savings:</strong> ${monthlySavings.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Annual Savings:</strong> ${annualSavings.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Implementation Cost:</strong> ${implementationCost.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Annual Platform Cost:</strong> ${platformCost.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Net Annual Benefit:</strong> ${netAnnualSavings.toLocaleString()}</p>`;
            resultHTML += `<p><strong>ROI:</strong> ${roiPercentage.toFixed(1)}%</p>`;
            resultHTML += `<p><strong>Customer Impact:</strong> ${satisfactionImpact}</p>`;
            resultHTML += `<p><strong>Payback Period:</strong> ${(implementationCost / (netAnnualSavings / 12)).toFixed(1)} months</p>`;
            resultHTML += '</div>';
            
            document.getElementById('chatbot-result').innerHTML = resultHTML;
            saveBusinessData();
            updateDashboard();
        }

        function calculateAnalyticsROI() {
            const reportingHours = parseInt(document.getElementById('reportingHours').value) || 0;
            const analystRate = parseFloat(document.getElementById('analystRate').value) || 0;
            const revenueRisk = parseFloat(document.getElementById('revenueRisk').value) || 0;
            const decisionSpeed = parseFloat(document.getElementById('decisionSpeed').value) || 1.5;
            const dataQuality = parseInt(document.getElementById('dataQuality').value) || 6;
            const teamSize = parseInt(document.getElementById('teamSize').value) || 3;
            
            const weeklySavings = reportingHours * analystRate * 0.8; // 80% time savings
            const annualTimeSavings = weeklySavings * 52;
            const decisionValue = revenueRisk * 52 * 0.3 * (decisionSpeed - 1); // Speed improvement value
            const dataQualityImprovement = (10 - dataQuality) * 5000; // Quality improvement value
            const teamProductivityGain = teamSize * analystRate * 40 * 0.3; // 30% productivity increase
            
            const totalAnnualBenefit = annualTimeSavings + decisionValue + dataQualityImprovement + teamProductivityGain;
            
            businessData.calculations++;
            businessData.totalSavings += totalAnnualBenefit;
            businessData.roiScores.push(85); // Typical analytics ROI
            
            let resultHTML = '<div class="result-box">';
            resultHTML += '<h4>üìä AI Analytics Impact Analysis</h4>';
            resultHTML += `<p><strong>Annual Time Savings:</strong> ${annualTimeSavings.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Decision Speed Value:</strong> ${decisionValue.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Data Quality Improvement:</strong> ${dataQualityImprovement.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Team Productivity Gain:</strong> ${teamProductivityGain.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Total Annual Benefit:</strong> ${totalAnnualBenefit.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Weekly Hours Saved:</strong> ${(reportingHours * 0.8).toFixed(1)} hours</p>`;
            resultHTML += `<p><strong>Decision Speed Improvement:</strong> ${decisionSpeed}x faster</p>`;
            resultHTML += '</div>';
            
            document.getElementById('analytics-result').innerHTML = resultHTML;
            saveBusinessData();
            updateDashboard();
        }

        function calculateMarketingROI() {
            const monthlyLeads = parseInt(document.getElementById('monthlyLeads').value) || 0;
            const conversionRate = parseFloat(document.getElementById('conversionRate').value) || 0;
            const customerValue = parseFloat(document.getElementById('customerValue').value) || 0;
            const aiImprovement = parseInt(document.getElementById('aiImprovement').value) || 0;
            const nurturingGain = parseFloat(document.getElementById('nurturingGain').value) || 1.2;
            const marketingTeam = parseInt(document.getElementById('marketingTeam').value) || 3;
            
            const currentMonthly
