        function generateExecutiveSummary() {
            const executiveData = {
                type: 'executive-summary',
                timestamp: new Date().toISOString(),
                totalCalculations: businessData.calculations,
                totalSavings: businessData.totalSavings,
                avgROI: businessData.roiScores.reduce((a, b) => a + b, 0) / businessData.roiScores.length,
                topOpportunities: businessData.processes.slice(0, 3),
                recommendations: ['Immediate implementation recommended', 'Strong ROI potential', 'Industry-leading opportunity']
            };
            downloadJSON(executiveData, 'ai-automation-executive-summary');
        }

