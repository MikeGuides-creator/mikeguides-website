    <script>
        // Enhanced JavaScript with comprehensive functionality
        
        // Global data storage
        let businessData = {
            calculations: 0,
            totalSavings: 0,
            completedSteps: 0,
            roiScores: [],
            assessments: [],
            processes: [],
            implementations: []
        };

        // Load saved data
        function loadBusinessData() {
            const saved = localStorage.getItem('ai-business-automation-data');
            if (saved) {
                businessData = { ...businessData, ...JSON.parse(saved) };
                updateDashboard();
            }
        }

        // Save data
        function saveBusinessData() {
            localStorage.setItem('ai-business-automation-data', JSON.stringify(businessData));
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadBusinessData();
            setupEventListeners();
            setupThemeToggle();
            updateDashboard();
        });

        function setupEventListeners() {
            // Tab switching
            document.querySelectorAll('.nav-tab').forEach(tab => {
                tab.addEventListener('click', () => {
                    document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
                    document.querySelectorAll('.content-section').forEach(c => c.classList.remove('active'));
                    
                    tab.classList.add('active');
                    document.getElementById(tab.dataset.tab).classList.add('active');
                });
            });
        }

        function setupThemeToggle() {
            const themeToggle = document.getElementById('themeToggle');
            const currentTheme = localStorage.getItem('ai-automation-theme') || 'light';
            
            if (currentTheme === 'dark') {
                document.body.classList.add('dark-theme');
                themeToggle.textContent = '‚òÄÔ∏è';
            }

            themeToggle.addEventListener('click', () => {
                document.body.classList.toggle('dark-theme');
                const isDark = document.body.classList.contains('dark-theme');
                themeToggle.textContent = isDark ? '‚òÄÔ∏è' : 'üåô';
                localStorage.setItem('ai-automation-theme', isDark ? 'dark' : 'light');
            });
        }

        function updateDashboard() {
            document.getElementById('totalCalculations').textContent = businessData.calculations;
            document.getElementById('totalSavings').textContent = ' + businessData.totalSavings.toLocaleString();
            document.getElementById('completedSteps').textContent = businessData.completedSteps;
            
            const avgROI = businessData.roiScores.length > 0 ? 
                Math.round(businessData.roiScores.reduce((a, b) => a + b, 0) / businessData.roiScores.length) : 0;
            document.getElementById('roiScore').textContent = avgROI + '%';
        }

        function assessReadiness() {
            const revenue = parseInt(document.getElementById('revenue').value) || 0;
            const employees = parseInt(document.getElementById('employees').value) || 0;
            const automation = document.getElementById('automation').value;
            const industry = document.getElementById('industry').value;
            
            let score = 0;
            let recommendations = [];
            let industryMultiplier = 1;
            
            // Industry-specific scoring
            const industryFactors = {
                'manufacturing': 1.2,
                'finance': 1.1,
                'technology': 1.3,
                'retail': 1.0,
                'healthcare': 0.9,
                'other': 1.0
            };
            industryMultiplier = industryFactors[industry] || 1.0;
            
            // Revenue scoring
            if (revenue > 10000000) score += 35;
            else if (revenue > 5000000) score += 30;
            else if (revenue > 1000000) score += 20;
            else if (revenue > 500000) score += 10;
            else recommendations.push("Consider starting with low-cost automation solutions");
            
            // Employee count scoring
            if (employees > 200) score += 30;
            else if (employees > 100) score += 25;
            else if (employees > 50) score += 20;
            else if (employees > 10) score += 15;
            else recommendations.push("Focus on high-impact, simple automation first");
            
            // Automation level scoring
            switch(automation) {
                case 'high': score += 35; break;
                case 'medium': score += 25; break;
                case 'low': score += 10; recommendations.push("Build digital foundation before AI implementation"); break;
            }
            
            // Apply industry multiplier
            score = Math.round(score * industryMultiplier);
            
            let readinessLevel, color, advice, nextSteps;
            if (score >= 85) {
                readinessLevel = "Excellent - Ready for Advanced AI";
                color = "#10B981";
                advice = "Your organization is perfectly positioned for comprehensive AI implementation.";
                nextSteps = ["Start with pilot programs in 2-3 areas", "Assemble AI steering committee", "Begin staff training immediately"];
            } else if (score >= 70) {
                readinessLevel = "High - Strong Foundation";
                color = "#059669";
                advice = "Very good position for AI implementation with gradual rollout.";
                nextSteps = ["Begin with process automation", "Invest in data quality", "Plan 6-month implementation"];
            } else if (score >= 50) {
                readinessLevel = "Medium - Build Capabilities";
                color = "#F59E0B";
                advice = "Solid foundation but needs capability building before full implementation.";
                nextSteps = ["Focus on data organization", "Train key personnel", "Start with simple automation"];
            } else {
                readinessLevel = "Low - Foundation Required";
                color = "#EF4444";
                advice = "Build digital infrastructure and processes before AI investment.";
                nextSteps = ["Digitize manual processes", "Improve data collection", "Establish basic automation"];
            }
            
            const assessment = {
                score,
                level: readinessLevel,
                revenue,
                employees,
                automation,
                industry,
                timestamp: new Date().toISOString()
            };
            
            businessData.assessments.push(assessment);
            businessData.calculations++;
            businessData.roiScores.push(score);
            
            let resultHTML = `<div class="result-box" style="border-color: ${color}">`;
            resultHTML += `<h4>üéØ AI Readiness Score: ${score}/100</h4>`;
            resultHTML += `<p><strong>Assessment:</strong> ${readinessLevel}</p>`;
            resultHTML += `<p><strong>Recommendation:</strong> ${advice}</p>`;
            
            if (nextSteps.length > 0) {
                resultHTML += `<div style="margin-top: 1rem;"><strong>Next Steps:</strong><ul>`;
                nextSteps.forEach(step => resultHTML += `<li style="margin: 0.5rem 0;">${step}</li>`);
                resultHTML += '</ul></div>';
            }
            
            if (recommendations.length > 0) {
                resultHTML += `<div style="margin-top: 1rem;"><strong>Additional Recommendations:</strong><ul>`;
                recommendations.forEach(rec => resultHTML += `<li style="margin: 0.5rem 0;">${rec}</li>`);
                resultHTML += '</ul></div>';
            }
            
            resultHTML += `<div class="methodology-note">`;
            resultHTML += `<strong>Industry Factor Applied:</strong> ${industry.charAt(0).toUpperCase() + industry.slice(1)} (${industryMultiplier}x multiplier)`;
            resultHTML += `</div></div>`;
            
            document.getElementById('readiness-result').innerHTML = resultHTML;
            saveBusinessData();
            updateDashboard();
        }

        function evaluateProcess() {
            const processName = document.getElementById('processName').value || "Unnamed Process";
            const volume = parseInt(document.getElementById('volume').value) || 1;
            const repetitiveness = parseInt(document.getElementById('repetitiveness').value) || 1;
            const timeConsumption = parseInt(document.getElementById('timeConsumption').value) || 0;
            const errorRate = parseInt(document.getElementById('errorRate').value) || 0;
            const hourlyCost = parseInt(document.getElementById('hourlyCost').value) || 25;
            
            // Enhanced scoring algorithm
            const automationScore = (volume * 0.3 + repetitiveness * 0.3 + Math.min(timeConsumption/10, 5) * 0.25 + (errorRate > 2 ? 1 : 0) * 0.15);
            
            let priority, color, recommendation, implementationTime;
            if (automationScore >= 4) {
                priority = "üî• CRITICAL PRIORITY";
                color = "#10B981";
                recommendation = "Immediate automation candidate. Start implementation within 30 days.";
                implementationTime = "2-3 months";
            } else if (automationScore >= 3) {
                priority = "‚ö° HIGH PRIORITY";
                color = "#059669";
                recommendation = "Excellent automation candidate. Include in phase 1 implementation.";
                implementationTime = "3-4 months";
            } else if (automationScore >= 2) {
                priority = "‚≠ê MEDIUM PRIORITY";
                color = "#F59E0B";
                recommendation = "Good candidate for automation. Include in phase 2.";
                implementationTime = "6-8 months";
            } else {
                priority = "üìã LOW PRIORITY";
                color = "#EF4444";
                recommendation = "Process optimization recommended before automation.";
                implementationTime = "12+ months";
            }
            
            const annualTimeSavings = timeConsumption * 52;
            const annualCostSavings = annualTimeSavings * hourlyCost;
            const errorReductionValue = errorRate > 0 ? annualCostSavings * 0.1 : 0;
            const totalAnnualValue = annualCostSavings + errorReductionValue;
            
            const processAnalysis = {
                name: processName,
                score: automationScore,
                priority,
                annualValue: totalAnnualValue,
                implementationTime,
                timestamp: new Date().toISOString()
            };
            
            businessData.processes.push(processAnalysis);
            businessData.calculations++;
            businessData.totalSavings += totalAnnualValue;
            
            let resultHTML = `<div class="result-box" style="border-color: ${color}">`;
            resultHTML += `<h4>${processName} - ${priority}</h4>`;
            resultHTML += `<p><strong>Automation Score:</strong> ${automationScore.toFixed(1)}/5.0</p>`;
            resultHTML += `<p><strong>Recommendation:</strong> ${recommendation}</p>`;
            resultHTML += `<p><strong>Annual Time Savings:</strong> ${annualTimeSavings} hours</p>`;
            resultHTML += `<p><strong>Annual Cost Savings:</strong> ${annualCostSavings.toLocaleString()}</p>`;
            if (errorReductionValue > 0) {
                resultHTML += `<p><strong>Error Reduction Value:</strong> ${errorReductionValue.toLocaleString()}</p>`;
            }
            resultHTML += `<p><strong>Total Annual Value:</strong> ${totalAnnualValue.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Implementation Timeline:</strong> ${implementationTime}</p>`;
            resultHTML += '</div>';
            
            document.getElementById('process-result').innerHTML = resultHTML;
            
            // Update progress tracking
            const processCount = businessData.processes.length;
            document.getElementById('processProgress').style.width = Math.min(processCount * 10, 100) + '%';
            document.getElementById('processProgressText').textContent = `${processCount} processes analyzed`;
            
            saveBusinessData();
            updateDashboard();
        }

        function calculateChatbotROI() {
            const tickets = parseInt(document.getElementById('tickets').value) || 0;
            const agentCost = parseFloat(document.getElementById('agentCost').value) || 0;
            const resolutionTime = parseInt(document.getElementById('resolutionTime').value) || 0;
            const automationRate = parseInt(document.getElementById('automationRate').value) || 0;
            const satisfactionTarget = document.getElementById('satisfactionTarget').value;
            const timeline = parseInt(document.getElementById('timeline').value) || 6;
            
            const currentMonthlyRevenue = monthlyLeads * (conversionRate / 100) * customerValue;
            const improvedConversionRate = conversionRate * (1 + aiImprovement / 100);
            const newMonthlyRevenue = monthlyLeads * (improvedConversionRate / 100) * customerValue * nurturingGain;
            const monthlyIncrease = newMonthlyRevenue - currentMonthlyRevenue;
            const annualIncrease = monthlyIncrease * 12;
            
            // Additional benefits
            const teamEfficiencyGain = marketingTeam * 40 * 50 * 0.25; // 25% efficiency gain
            const customerLifetimeValue = customerValue * 1.3; // Improved retention
            const totalAnnualValue = annualIncrease + teamEfficiencyGain;
            
            businessData.calculations++;
            businessData.totalSavings += totalAnnualValue;
            businessData.roiScores.push(Math.min((totalAnnualValue / 50000) * 100, 200)); // Scaled ROI
            
            let resultHTML = '<div class="result-box">';
            resultHTML += '<h4>üìà Marketing Automation Impact</h4>';
            resultHTML += `<p><strong>Current Monthly Revenue:</strong> ${currentMonthlyRevenue.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Improved Conversion Rate:</strong> ${improvedConversionRate.toFixed(2)}%</p>`;
            resultHTML += `<p><strong>New Monthly Revenue:</strong> ${newMonthlyRevenue.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Monthly Revenue Increase:</strong> ${monthlyIncrease.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Annual Revenue Increase:</strong> ${annualIncrease.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Team Efficiency Savings:</strong> ${teamEfficiencyGain.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Total Annual Value:</strong> ${totalAnnualValue.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Lead Nurturing Improvement:</strong> ${((nurturingGain - 1) * 100).toFixed(0)}%</p>`;
            resultHTML += '</div>';
            
            document.getElementById('marketing-result').innerHTML = resultHTML;
            saveBusinessData();
            updateDashboard();
        }

        function calculateComprehensiveROI() {
            const softwareCost = parseFloat(document.getElementById('softwareCost').value) || 0;
            const implementationCost = parseFloat(document.getElementById('implementationCost').value) || 0;
            const trainingCost = parseFloat(document.getElementById('trainingCost').value) || 0;
            const laborSavings = parseFloat(document.getElementById('laborSavings').value) || 0;
            const efficiencyGains = parseFloat(document.getElementById('efficiencyGains').value) || 0;
            const riskMitigation = parseFloat(document.getElementById('riskMitigation').value) || 0;
            
            const totalInvestment = implementationCost + trainingCost;
            const annualBenefits = laborSavings + efficiencyGains + riskMitigation;
            const annualOperatingCost = softwareCost;
            const netAnnualBenefit = annualBenefits - annualOperatingCost;
            
            const paybackPeriod = totalInvestment / (netAnnualBenefit / 12);
            const threeYearROI = ((netAnnualBenefit * 3 - totalInvestment) / totalInvestment * 100);
            const fiveYearNPV = calculateNPV(netAnnualBenefit, totalInvestment, 5, 0.08);
            
            businessData.calculations++;
            businessData.totalSavings += netAnnualBenefit;
            businessData.roiScores.push(Math.max(threeYearROI, 0));
            
            // Show benchmark comparison
            document.getElementById('benchmarkComparison').style.display = 'block';
            document.getElementById('yourROI').textContent = threeYearROI.toFixed(1) + '%';
            
            let resultHTML = '<div class="result-box">';
            resultHTML += '<h4>üí∞ Comprehensive AI Investment Analysis</h4>';
            resultHTML += `<p><strong>Total Initial Investment:</strong> ${totalInvestment.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Annual Benefits:</strong> ${annualBenefits.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Annual Operating Costs:</strong> ${annualOperatingCost.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Net Annual Benefit:</strong> ${netAnnualBenefit.toLocaleString()}</p>`;
            resultHTML += `<p><strong>Payback Period:</strong> ${paybackPeriod.toFixed(1)} months</p>`;
            resultHTML += `<p><strong>3-Year ROI:</strong> ${threeYearROI.toFixed(1)}%</p>`;
            resultHTML += `<p><strong>5-Year NPV:</strong> ${fiveYearNPV.toLocaleString()}</p>`;
            
            if (threeYearROI > 200) {
                resultHTML += '<p style="color: #10B981; font-weight: bold;">üöÄ Exceptional investment opportunity</p>';
            } else if (threeYearROI > 100) {
                resultHTML += '<p style="color: #059669; font-weight: bold;">‚úÖ Excellent investment with strong returns</p>';
            } else if (threeYearROI > 50) {
                resultHTML += '<p style="color: #F59E0B; font-weight: bold;">‚ö° Good investment opportunity</p>';
            } else {
                resultHTML += '<p style="color: #EF4444; font-weight: bold;">‚ö†Ô∏è Consider optimizing implementation approach</p>';
            }
            
            resultHTML += '</div>';
            document.getElementById('comprehensive-roi-result').innerHTML = resultHTML;
            saveBusinessData();
            updateDashboard();
        }

        function calculateNPV(annualBenefit, initialInvestment, years, discountRate) {
            let npv = -initialInvestment;
            for (let year = 1; year <= years; year++) {
                npv += annualBenefit / Math.pow(1 + discountRate, year);
            }
            return npv;
        }

        function toggleCheck(item) {
            item.classList.toggle('completed');
            
            // Update progress tracking
            const checklistItems = item.parentElement.querySelectorAll('li');
            const completedItems = item.parentElement.querySelectorAll('li.completed');
            const progress = (completedItems.length / checklistItems.length) * 100;
            
            // Update relevant progress bar
            if (item.parentElement.id || item.closest('[id]')) {
                const progressBar = document.getElementById('chatbotProgress');
                const progressText = document.getElementById('chatbotProgressText');
                if (progressBar) {
                    progressBar.style.width = progress + '%';
                    progressText.textContent = `${completedItems.length} of ${checklistItems.length} steps completed`;
                }
            }
            
            businessData.completedSteps = document.querySelectorAll('.checklist li.completed').length;
            saveBusinessData();
            updateDashboard();
        }

        // Enhanced export and utility functions
