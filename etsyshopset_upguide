    <script>
        // Progress tracking and interactivity
        let progressData = {
            currentStep: 2,
            totalSteps: 6,
            checklistProgress: 0
        };

        // Shop name validation
        function validateShopName() {
            const input = document.getElementById('shopNameInput');
            const validation = document.getElementById('nameValidation');
            const name = input.value.trim();
            
            if (name.length === 0) {
                validation.textContent = '';
                validation.style.color = '#4a5568';
                return;
            }
            
            if (name.length < 4) {
                validation.textContent = '❌ Too short - minimum 4 characters required';
                validation.style.color = '#e53e3e';
            } else if (name.length > 20) {
                validation.textContent = '❌ Too long - maximum 20 characters allowed';
                validation.style.color = '#e53e3e';
            } else if (!/^[a-zA-Z0-9]+$/.test(name)) {
                validation.textContent = '⚠️ Use only letters and numbers (no spaces or symbols)';
                validation.style.color = '#ed8936';
            } else {
                validation.textContent = '✅ Perfect! This name looks great and meets all requirements';
                validation.style.color = '#38a169';
            }
        }

        // Random name generator
        function generateRandomName() {
            const prefixes = ['Cozy', 'Rustic', 'Modern', 'Vintage', 'Creative', 'Artisan', 'Handmade', 'Studio', 'Craft', 'Design'];
            const suffixes = ['Works', 'Studio', 'Crafts', 'Creations', 'Designs', 'Gallery', 'Shop', 'Corner', 'Haven', 'Nest'];
            
            const randomPrefix = prefixes[Math.floor(Math.random() * prefixes.length)];
            const randomSuffix = suffixes[Math.floor(Math.random() * suffixes.length)];
            const randomName = randomPrefix + randomSuffix;
            
            document.getElementById('shopNameInput').value = randomName;
            validateShopName();
            
            // Show a success message
            const validation = document.getElementById('nameValidation');
            validation.textContent = `🎲 Generated: "${randomName}" - Try it out or generate another!`;
            validation.style.color = '#667eea';
        }

        // Demo functions
// Pro tip toggle functionality
        function toggleProTip(header) {
            const content = header.nextElementSibling;
            const toggle = header.querySelector('.pro-tip-toggle');
            
            if (content.classList.contains('expanded')) {
                content.classList.remove('expanded');
                toggle.textContent = '+';
            } else {
                content.classList.add('expanded');
                toggle.textContent = '−';
            }
        }
        function showAlert() {
            alert('🎉 Congratulations! Your template is working perfectly with full JavaScript functionality!');
        }

        function updateProgress() {
            const progressFill = document.getElementById('mainProgress');
            const progressText = document.getElementById('progressText');
            
            // Animate progress increase
            let currentWidth = parseInt(progressFill.style.width) || 40;
            let newWidth = Math.min(currentWidth + 20, 100);
            
            progressFill.style.width = newWidth + '%';
            progressText.textContent = `Progress updated to ${newWidth}%`;
            
            // Show demo output
            const output = document.getElementById('demoOutput');
            const text = document.getElementById('demoText');
            output.style.display = 'block';
            text.textContent = `Progress bar updated to ${newWidth}%! 🚀`;
        }

        function toggleDemo() {
            const output = document.getElementById('demoOutput');
            const text = document.getElementById('demoText');
            
            if (output.style.display === 'none' || !output.style.display) {
                output.style.display = 'block';
                text.textContent = 'Demo panel activated! All interactive features are working! ✨';
            } else {
                output.style.display = 'none';
            }
        }

        function calculateExample() {
            const output = document.getElementById('demoOutput');
            const text = document.getElementById('demoText');
            
            // Example calculation (Etsy fees)
            const itemPrice = 25.00;
            const listingFee = 0.20;
            const transactionFee = itemPrice * 0.065;
            const paymentFee = itemPrice * 0.03 + 0.25;
            const totalFees = listingFee + transactionFee + paymentFee;
            const profit = itemPrice - totalFees;
            
            output.style.display = 'block';
            text.innerHTML = `
                <strong>Etsy Fee Calculator Demo:</strong><br>
                Item Price: ${itemPrice.toFixed(2)} → 
                Total Fees: ${totalFees.toFixed(2)} → 
                You Keep: ${profit.toFixed(2)} 💰
            `;
        }

        // Update checklist progress
        function updateChecklistProgress() {
            const checkboxes = document.querySelectorAll('input[type="checkbox"]');
            const checkedBoxes = document.querySelectorAll('input[type="checkbox"]:checked');
            const progressPercentage = checkboxes.length > 0 ? (checkedBoxes.length / checkboxes.length) * 100 : 0;
            
            progressData.checklistProgress = progressPercentage;
            
            // Update progress text
            const progressText = document.getElementById('progressText');
            if (progressText) {
                const completedSteps = Math.floor((progressPercentage / 100) * progressData.totalSteps);
                progressText.textContent = `${completedSteps} of ${progressData.totalSteps} sections completed (${Math.round(progressPercentage)}% checklist progress)`;
            }
        }

        // Add event listeners to all checkboxes
        document.addEventListener('DOMContentLoaded', function() {
            const checkboxes = document.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateChecklistProgress);
            });
            
            // Initialize progress
            updateChecklistProgress();
            
            // Add smooth scroll behavior
            document.documentElement.style.scrollBehavior = 'smooth';
        });

        // Add some fun interactions
        document.addEventListener('DOMContentLoaded', function() {
            // Add click effects to step boxes
            const stepBoxes = document.querySelectorAll('.step-box');
            stepBoxes.forEach(box => {
                box.addEventListener('click', function(e) {
                    if (e.target.type !== 'checkbox' && e.target.tagName !== 'INPUT' && e.target.tagName !== 'BUTTON') {
                        this.style.transform = 'scale(0.98)';
                        setTimeout(() => {
                            this.style.transform = '';
                        }, 150);
                    }
                });
            });
            
            // Add typing effect for form validation
            const shopNameInput = document.getElementById('shopNameInput');
            if (shopNameInput) {
                shopNameInput.addEventListener('input', function() {
                    this.style.borderColor = '#f56500';
                    setTimeout(() => {
                        if (!this.matches(':focus')) {
                            this.style.borderColor = '';
                        }
                    }, 2000);
                });
            }
        });
        // Export functions for potential external use
        // Character count for product title
        function updateCharacterCount(inputId, maxLength) {
            const input = document.getElementById(inputId);
            const counter = document.getElementById(inputId + 'Count');
            const currentLength = input.value.length;
            
            if (counter) {
                counter.textContent = `${currentLength}/${maxLength} characters`;
                counter.style.color = currentLength > maxLength ? '#e53e3e' : '#4a5568';
                
                if (currentLength > maxLength) {
                    counter.style.fontWeight = 'bold';
                    input.style.borderColor = '#e53e3e';
                } else if (currentLength > maxLength * 0.9) {
                    counter.style.color = '#ed8936';
                    input.style.borderColor = '#ed8936';
                } else {
                    input.style.borderColor = '#38a169';
                }
            }
        }

        // Etsy fee calculator
        function calculateListingFees() {
            const price = parseFloat(document.getElementById('productPrice').value) || 0;
            const calculator = document.getElementById('feeCalculatorOutput');
            
            if (price > 0) {
                const listingFee = 0.20;
                const transactionFee = price * 0.065; // 6.5%
                const paymentFee = price * 0.03 + 0.25; // 3% + $0.25
                const totalFees = listingFee + transactionFee + paymentFee;
                const youKeep = price - totalFees;
                
                document.getElementById('listingFeeAmount').textContent = '$' + listingFee.toFixed(2);
                document.getElementById('transactionFeeAmount').textContent = '$' + transactionFee.toFixed(2);
                document.getElementById('paymentFeeAmount').textContent = '$' + paymentFee.toFixed(2);
                document.getElementById('youKeepAmount').textContent = '$' + youKeep.toFixed(2);
                
                calculator.style.display = 'block';
            } else {
                calculator.style.display = 'none';
            }
        }

        // Fix the progress calculation
        function updateChecklistProgress() {
            const checkboxes = document.querySelectorAll('input[type="checkbox"]');
            const checkedBoxes = document.querySelectorAll('input[type="checkbox"]:checked');
            const progressPercentage = checkboxes.length > 0 ? (checkedBoxes.length / checkboxes.length) * 100 : 0;
            
            // background: linear-gradient(135deg, #667eea bar
            const progressFill = document.getElementById('mainProgress');
            if (progressFill) {
                progressFill.style.width = progressPercentage + '%';
            }
            
            // background: linear-gradient(135deg, #667eea text
            const progressText = document.getElementById('progressText');
            if (progressText) {
                progressText.textContent = `${checkedBoxes.length} of ${checkboxes.length} tasks completed (${Math.round(progressPercentage)}% progress)`;
            }
        }
        // Shipping calculator functions
        function calculateShippingTotals() {
            const domestic = parseFloat(document.getElementById('domesticShipping').value) || 0;
            const international = parseFloat(document.getElementById('internationalShipping').value) || 0;
            const calculator = document.getElementById('shippingCalculatorOutput');
            
            if (domestic > 0 || international > 0) {
                document.getElementById('domesticTotal').textContent = `Product + $${domestic.toFixed(2)}`;
                document.getElementById('internationalTotal').textContent = `Product + $${international.toFixed(2)}`;
                
                // Provide shipping strategy advice
                let advice = "Good setup!";
                if (domestic === 0) {
                    advice = "Consider FREE shipping strategy!";
                } else if (domestic > 10) {
                    advice = "Rates might be too high - test free shipping";
                } else if (domestic < 5 && international < 15) {
                    advice = "Competitive rates - good for conversions!";
                }
                
                document.getElementById('shippingAdvice').textContent = advice;
                calculator.style.display = 'block';
            } else {
                calculator.style.display = 'none';
            }
        }

        // Processing time advisor
        function updateProcessingAdvice() {
            const processingTime = document.getElementById('processingTime').value;
            const adviceBox = document.getElementById('processingAdvice');
            const impactText = document.getElementById('processingImpact');
            
            let impact = "";
            
            switch(processingTime) {
                case "1-2":
                    impact = "Excellent for customer satisfaction! Ensure you can consistently meet this timeline.";
                    break;
                case "3-5":
                    impact = "Good balance of speed and reliability. Most customers find this acceptable.";
                    break;
                case "1-2 weeks":
                    impact = "Acceptable for custom work. Clearly communicate this is made-to-order.";
                    break;
                case "2-3 weeks":
                    impact = "Longer timeline - ensure your product quality justifies the wait.";
                    break;
                case "4-6 weeks":
                    impact = "Very long timeline - only use for highly complex custom work. Consider offering rush options.";
                    break;
                default:
                    adviceBox.style.display = 'none';
                    return;
            }
            
            impactText.textContent = impact;
            adviceBox.style.display = 'block';
        }
        // Advanced Etsy fee calculator with profitability analysis
        function calculateAllEtsyFees() {
            const itemPrice = parseFloat(document.getElementById('finalItemPrice').value) || 0;
            const shipping = parseFloat(document.getElementById('finalShippingCost').value) || 0;
            const materials = parseFloat(document.getElementById('materialCosts').value) || 0;
            const laborHours = parseFloat(document.getElementById('laborTime').value) || 0;
            const hourlyRate = parseFloat(document.getElementById('hourlyRate').value) || 0;
            
            const calculator = document.getElementById('advancedFeeCalculator');
            
            if (itemPrice > 0) {
                // Calculate Etsy fees
                const listingFee = 0.20;
                const transactionFee = (itemPrice + shipping) * 0.065; // 6.5%
                const paymentFee = (itemPrice + shipping) * 0.03 + 0.25; // 3% + $0.25
                const totalFees = listingFee + transactionFee + paymentFee;
                
                // Calculate costs and profit
                const laborCost = laborHours * hourlyRate;
                const totalRevenue = itemPrice + shipping;
                const totalCosts = materials + laborCost + totalFees;
                const profit = totalRevenue - totalCosts;
                const actualHourlyRate = laborHours > 0 ? profit / laborHours : 0;
                
                // Update fee breakdown
                document.getElementById('advancedListingFee').textContent = '$' + listingFee.toFixed(2);
                document.getElementById('advancedTransactionFee').textContent = '$' + transactionFee.toFixed(2);
                document.getElementById('advancedPaymentFee').textContent = '$' + paymentFee.toFixed(2);
                document.getElementById('advancedTotalFees').textContent = '$' + totalFees.toFixed(2);
                
                // Update profitability analysis
                document.getElementById('totalRevenue').textContent = '$' + totalRevenue.toFixed(2);
                document.getElementById('totalCosts').textContent = '$' + totalCosts.toFixed(2);
                document.getElementById('finalProfit').textContent = '$' + profit.toFixed(2);
                document.getElementById('actualHourlyRate').textContent = '$' + actualHourlyRate.toFixed(2);
                
                // Profitability advice
                let advice = "";
                let adviceColor = "#ffffff";
                
                if (profit <= 0) {
                    advice = "⚠️ Not profitable! Increase price or reduce costs.";
                    adviceColor = "#fed7d7";
                } else if (actualHourlyRate < 10) {
                    advice = "💡 Low hourly rate. Consider increasing prices for better profit.";
                    adviceColor = "#fef5e7";
                } else if (actualHourlyRate >= 15) {
                    advice = "🎉 Excellent profitability! This pricing works well.";
                    adviceColor = "#f0fff4";
                } else {
                    advice = "✓ Decent profit margin. Could optimize pricing further.";
                    adviceColor = "#e6f3ff";
                }
                
                document.getElementById('profitAdviceText').textContent = advice;
                document.getElementById('profitabilityAdvice').style.background = adviceColor;
                document.getElementById('profitabilityAdvice').style.color = profit <= 0 ? "#742a2a" : "#2d3748";
                
                calculator.style.display = 'block';
            } else {
                calculator.style.display = 'none';
            }
        }
        // Advanced Etsy fee calculator with profitability analysis
        function calculateAllEtsyFees() {
            const itemPrice = parseFloat(document.getElementById('finalItemPrice').value) || 0;
            const shipping = parseFloat(document.getElementById('finalShippingCost').value) || 0;
            const materials = parseFloat(document.getElementById('materialCosts').value) || 0;
            const laborHours = parseFloat(document.getElementById('laborTime').value) || 0;
            const hourlyRate = parseFloat(document.getElementById('hourlyRate').value) || 0;
            
