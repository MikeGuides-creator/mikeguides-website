                calculator.style.display = 'none';
            }
        }
        // Launch date calculator and readiness tracker
        function calculateLaunchDays() {
            const launchDate = new Date(document.getElementById('launchDate').value);
            const today = new Date();
            const countdown = document.getElementById('launchCountdown');
            const daysElement = document.getElementById('daysUntilLaunch');
            const adviceElement = document.getElementById('launchAdvice');
            
            if (launchDate && !isNaN(launchDate)) {
                const timeDiff = launchDate.getTime() - today.getTime();
                const daysDiff = Math.ceil(timeDiff / (1000 * 3600 * 24));
                
                let advice = "";
                
                if (daysDiff < 0) {
                    daysElement.textContent = "Launch date has passed!";
                    advice = "Time to launch! If you haven't already, go live now!";
                } else if (daysDiff === 0) {
                    daysElement.textContent = "Launch day is TODAY!";
                    advice = "🚀 LAUNCH DAY! Make your announcement and start promoting!";
                } else if (daysDiff === 1) {
                    daysElement.textContent = "1 day until launch!";
                    advice = "Final preparations! Double-check everything is ready.";
                } else if (daysDiff <= 7) {
                    daysElement.textContent = `${daysDiff} days until launch!`;
                    advice = "Perfect timing! Focus on final preparations and launch content.";
                } else if (daysDiff <= 14) {
                    daysElement.textContent = `${daysDiff} days until launch!`;
                    advice = "Great planning ahead! Use this time to perfect your listings and prepare marketing materials.";
                } else if (daysDiff <= 30) {
                    daysElement.textContent = `${daysDiff} days until launch!`;
                    advice = "Excellent advance planning! Plenty of time to prepare everything perfectly.";
                } else {
                    daysElement.textContent = `${daysDiff} days until launch!`;
                    advice = "Very long timeline - consider a sooner launch date to maintain momentum.";
                }
                
                adviceElement.textContent = advice;
                countdown.style.display = 'block';
            } else {
                countdown.style.display = 'none';
            }
        }

        // Launch readiness score calculator
        function updateReadinessScore() {
            // Small delay to ensure checkbox state is updated
            setTimeout(() => {
                const totalItems = document.querySelectorAll('#launch1, #launch2, #launch3, #launch4, #launch5, #launch6, #launch7, #launch8, #launch9, #launch10').length;
                const checkedItems = document.querySelectorAll('#launch1:checked, #launch2:checked, #launch3:checked, #launch4:checked, #launch5:checked, #launch6:checked, #launch7:checked, #launch8:checked, #launch9:checked, #launch10:checked').length;
                
                const percentage = totalItems > 0 ? Math.round((checkedItems / totalItems) * 100) : 0;
                
                document.getElementById('readinessScore').textContent = percentage + '%';
                document.getElementById('readinessBar').style.width = percentage + '%';
                
                // Update progress bar color based on readiness
                const bar = document.getElementById('readinessBar');
                if (percentage < 50) {
                    bar.style.background = 'linear-gradient(90deg, #e53e3e, #ed8936)';
                } else if (percentage < 80) {
                    bar.style.background = 'linear-gradient(90deg, #ed8936, #f56500)';
                } else {
                    bar.style.background = 'linear-gradient(90deg, #f56500, #38a169)';
                }
                
                // Update overall progress calculation to include launch items
                updateChecklistProgress();
            }, 100);
        }

        // Update the main progress to include all checklist items
        function updateChecklistProgress() {
            const checkboxes = document.querySelectorAll('input[type="checkbox"]');
            const checkedBoxes = document.querySelectorAll('input[type="checkbox"]:checked');
            const progressPercentage = checkboxes.length > 0 ? (checkedBoxes.length / checkboxes.length) * 100 : 0;
            
            // Update progress bar
            const progressFill = document.getElementById('mainProgress');
            if (progressFill) {
                progressFill.style.width = progressPercentage + '%';
            }
            
            // Update progress text
            const progressText = document.getElementById('progressText');
            if (progressText) {
                const totalSteps = 6;
                const currentStep = progressPercentage >= 100 ? 6 : Math.ceil((progressPercentage / 100) * totalSteps);
                progressText.textContent = `${checkedBoxes.length} of ${checkboxes.length} tasks completed (${Math.round(progressPercentage)}% progress) - Step ${currentStep} of ${totalSteps}`;
            }
        }
        window.TemplateSystem = {
            validateShopName,
            generateRandomName,
            updateProgress,
            updateChecklistProgress,
            progressData
        };
    </script>
